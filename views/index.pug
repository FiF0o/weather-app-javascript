extends layout

block content

  if data.title
    h1= data.title
  else
    h1= title

  form(action="/", method="get", id="weather_form")
    // name required for req.query not to be empty - getting the query object from the form
    input#weather(type="text", name="city")
  button(type="submit", form="weather_form", value="submit") Submit

  h2= data.city

  if data.list
    p= data.country

    each weather in data.list
      li
        // returned from the map
        span= weather.date
        span= weather.temp
        // array within array - access weather array
        each info in weather.weather
          p= info.main
          p= info.description
          p= info.icon
  else
    h2 Else condition #{data} and its title #{title}